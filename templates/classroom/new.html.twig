{% extends 'base.html.twig' %}

{% block title %}
    New Article
{% endblock %}

{% block body %}
{% if app.user %}
    {% if is_granted('ROLE_ADMIN') %}
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    {% else %}
    <h1>Invalid permissions.</h1>
    {% endif %}
{% else %}
    <a href="/login">Login</a>
{% endif %}
{% endblock %}